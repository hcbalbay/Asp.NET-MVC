<!DOCTYPE html>
<html>
<head>
    <title>Cinema A Entertainment Category Flat Bootstarp Resposive Website Template | Videos :: w3layouts</title>
    <link href="~/Content/AnaSayfa/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href="~/Content/AnaSayfa/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <script src="~/Content/AnaSayfa/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Cinema Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- header-section-starts -->
    <div>
        <div>
            <div class="video-content">
                <div class="right-content">
                    <div class="right-content-heading">
                        <div class="right-content-heading-left">
                            <h3 style="text-align:Center" class="head">Vizyondakiler</h3>
                        </div>
                    </div>
                    <!-- pop-up-box -->
                    <link href="css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
                    <script src="~/Content/AnaSayfa/js/jquery.magnific-popup.js" type="text/javascript"></script>
                    <script>
                        $(document).ready(function () {
                            $('.popup-with-zoom-anim').magnificPopup({
                                type: 'inline',
                                fixedContentPos: false,
                                fixedBgPos: true,
                                overflowY: 'auto',
                                closeBtnInside: true,
                                preloader: false,
                                midClick: true,
                                removalDelay: 300,
                                mainClass: 'my-mfp-zoom-in'
                            });
                        });
                    </script>
                    <!--//pop-up-box -->
                    @foreach (var film in Model)
                    {
                    <div style="width:500px; margin:0 auto;" class="content-grids">  @*<div style="width:auto" class="content-grids col-md-6">*@
                                            <div style="width:500px" class="content-grid">
                                                <a>
                                                    @*<img src="~/Content/AnaSayfa/images/gridallbum1.jpg" title="allbum-name" />*@
                                                    <div id="small-dialog" class="mfp-hide">
                                                        <iframe width="450" height="250" src="https://www.youtube.com/embed/@film.fragman" frameborder="0" allowfullscreen></iframe>
                                                        <h3>@film.ad</h3>
                                                    </div>
                                                </a>
                                                <a class="button play-icon" href="/Bilet/Index/@film.filmID">Bilet Satın Al</a>
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                        <div class="box box-primary ">   @*<div ?   class="box box-primary col-md-8">*@
                                                <div class="box-body box-profile">


                                                    <ul class="list-group list-group-unbordered">
                                                        <li class="list-group-item">
                                                            <b>Açıklama:</b> <span>@film.aciklama</span>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Vizyon Tarihi:</b> <span class="date">@film.vizyontarih.Value.ToShortDateString()</span>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Seans:</b> <span>@film.seans</span>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Salon</b> <span>@film.salon</span>
                                                        </li>
                                                        @*Yaş grup ifleri*@
                                                        <li class="list-group-item">
                                                            <b>Yaş Grubu:</b>
                                                            @{ if (film.YasGrup.ad == "Genel İzleyici")
                                                                {<span style="text-align:center" class="label label-success">@film.YasGrup.ad</span>}
                                                            if (film.YasGrup.ad == "7+")
                                                            {<span style="text-align:center" class="label label-success">@film.YasGrup.ad</span> }
                                                        if (film.YasGrup.ad == "13+")
                                                        {<span style="text-align:center" class="label label-warning">@film.YasGrup.ad</span> }
                                                    if (film.YasGrup.ad == "15+")
                                                    {<span style="text-align:center" class="label label-warning">@film.YasGrup.ad</span>}
                                                if (film.YasGrup.ad == "18+")
                                                {<span style="text-align:center" class="label label-danger">@film.YasGrup.ad</span> }
                                            if (film.YasGrup.ad == "Şiddet-Korku")
                                            {<span style="text-align:center" class="label label-danger">@film.YasGrup.ad</span>}
                                        if (film.YasGrup.ad == "Cinsellik")
                                        {<span style="text-align:center" class="label label-danger">@film.YasGrup.ad</span> }
                                    if (film.YasGrup.ad == "Olumsuz Örnek")
                                    {<span style="text-align:center" class="label label-danger">@film.YasGrup.ad</span>}
                                                            }
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Tür:</b> <span style="text-align:center" class="label label-info">@film.Tur.ad</span>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Yönetmen:</b> <span>@film.yonetmen</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <!-- /.box-body -->
                                            </div>
                    }
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</body>
</html>
