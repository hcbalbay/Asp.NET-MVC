@model Oyuncu
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Oyuncu Düzenle</h3>
        <div class="box-tools">
            <a href="/Oyuncu/Index" class="btn btn-danger" title="Geri">
                <i class="fa fa-reply-all"> Geri</i>
            </a>
        </div>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("Duzenle", "Oyuncu", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Uyarı!</h4>
                    @ViewBag.Hata
                </div>
            }
            <div class="form-group">
                <label>İsim</label>
                @Html.TextBoxFor(x=> x.ad, new { @class="form-control", @placeholder="İsim Giriniz", required = "required" })
            </div>
            <div class="form-group">
                <label>Soyisim</label>
                @Html.TextBoxFor(x => x.soyad, new { @class = "form-control", @placeholder = "Soyad Giriniz", required = "required" })
            </div>

            <div class="form-group">
                <label>Resim Seç</label>
                <div class="callout callout-success">
                    <img src="~/Content/Resimler/@Model.resim" class="img-rounded" style="width:100px;" /><b> Fotoğrafta değişiklik yapmak istemiyorsanız boş bırakınız!!!</b>
                </div>
                <input name="resimGelen" type="file">
            </div>

        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>