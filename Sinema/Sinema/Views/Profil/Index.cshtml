@{
    Kullanici k = (Kullanici)Session["Kullanici"];
}
<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" src="~/Content/Resimler/@k.resim" alt="User profile picture">

        <h3 class="profile-username text-center">@k.ad @k.soyad</h3>
        <h5 class="text-muted text-center"><span>@k.Yetki.ad</span></h5>@*<span style="text-align:center" class="label label-primary">@k.Yetki.ad</span></h4>*@
        @*<p class="text-muted text-center">@k.Yetki.ad</p>*@

        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>Mail</b> <span class="pull-right">@k.mail</span>
            </li>
            <li class="list-group-item">
                <b>Şifre</b> <span class="pull-right">@k.sifre</span>
            </li>
            <li class="list-group-item">
                <b>Telefon</b> <span class="pull-right">@k.telefon</span>
            </li>
        </ul>

        <a href="/Kullanici/Duzenle/@k.kullaniciID" class="btn btn-primary btn-block"><b>Düzenle</b></a>
    </div>
    <!-- /.box-body -->
</div>

