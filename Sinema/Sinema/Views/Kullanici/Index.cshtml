@model List<Kullanici>
@{
    ViewBag.Title = "Index";

}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Kullanıcılar</h3>
        <div class="box-tools">
            <a href="/Kullanici/Ekle" class="btn btn-success" title="Yeni Kullanıcı Ekle">
                <i class="fa fa-user-plus"> Kullanıcı Ekle</i>   
            </a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <table class="table table-condensed">
            <tbody>
                <tr>
                    <th style="width: 10px">No.</th>
                    <th style="width: 10px">Fotoğraf</th>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Yetki</th>
                    <th style="text-align:center">İşlemler</th>
                </tr>
                @foreach (var kul in Model)
                {   

                <tr>
                    <td class="counterCell"></td>
                    <td><img src="~/Content/Resimler/@kul.resim" width="45px" class="img-circle" /></td>
                    <td>@kul.ad</td>
                    <td>@kul.soyad</td>
                    <td>@kul.mail</td>
                    <td>@kul.telefon</td>
                    <td>@kul.Yetki.ad</td>
                    <td style="text-align:center">
                        <a href="/Kullanici/HediyeEkle/@kul.kullaniciID" class="btn btn-success" title="Hediye" onclick="return confirm('Kullanıcıya bilet hediye etmek istediğinize emin misiniz?')">
                            <i class="fa fa-gift"></i>
                        </a>
                        <a href="/Kullanici/Sil/@kul.kullaniciID" class="btn btn-danger" title="Sil" onclick="return confirm('Kullanıcıyı silmek istediğinize emin misiniz?')">
                            <i class="fa fa-trash"></i>
                        </a>
                        <a href="/Kullanici/Duzenle/@kul.kullaniciID" class="btn btn-info" title="Duzenle">
                            <i class="fa fa-edit"></i>
                        </a>

                    </td>

                </tr>
                }

                
            </tbody>
        </table>
    </div>
    
    <!-- /.box-body -->
</div>
<style>
    table {
        counter-reset: tableCount;
    }

    .counterCell:before {
        content: counter(tableCount);
        counter-increment: tableCount;
    }
</style>
