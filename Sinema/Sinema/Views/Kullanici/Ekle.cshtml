@model Kullanici
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Yeni Kullanıcı</h3>
        <div class="box-tools">
            <a href="/Kullanici/Index" class="btn btn-danger" title="Geri">
                <i class="fa fa-reply-all"> Geri</i>
            </a>
        </div>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @if (ViewBag.Sonuc != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Bilgilendirme!</h4>
            @ViewBag.Sonuc
        </div>
    }
    @using (Html.BeginForm("Ekle", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {@*Hangi Action,Hangi Controller,get mi post mu ?///formun içiresinde dosya göndereceksek forma bunu eklemeliyiz*@
    <div class="box-body">
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-ban"></i> Uyarı!</h4>
                @ViewBag.Hata
            </div>
        }
        <div>
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            @Html.ValidationSummary()
        </div>
        <div class="form-group">
            <label>İsim</label>
            <input name="ad" class="form-control " placeholder="İsim Giriniz" required>
        </div>
        <div class="form-group">
            <label>Soyisim</label>
            <input name="soyad" class="form-control" placeholder="Soyisim Giriniz" required>
        </div>
        <div class="form-group">
            <label>Email Adresi</label>
            <input name="mail" type="email" class="form-control" placeholder="Mail Giriniz" required>
            @Html.ValidationMessageFor(x => x.mail)
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input name="sifre" type="password" class="form-control" placeholder="Şifre Giriniz" required>
        </div>
        <div class="form-group">
            <label>Telefon</label>

            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-phone"></i>
                </div>
                <input maxlength="11" pattern="\d{11}" name="telefon" placeholder="Telefon Numarası Giriniz" type="text" class="form-control" title="Lütfen 11 Haneli Telefon Numarası Giriniz." data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="">
            </div>
            <!-- /.input group -->
        </div>
        <div class="form-group">
            <label>Yetki</label>
            @Html.DropDownList("yetkiID", (SelectList)ViewBag.Yetkiler, "Yetki Seçin", new { @class = "form-control", required = "required" })@*(ismi,arka tarafa hangi değişken ile gönderilecek,liste,önde gösterilecek yazı,html özelliği)*@
        </div>
        <div class="form-group">
            <label>Resim Seç</label>
            <input name="resimGelen" type="file">
        </div>
        <b> Fotoğraf Eklemek İstemiyorsanız Boş Geçiniz.</b>

    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <button type="submit" class="btn btn-success">Ekle</button>
    </div>
}
</div>
<style>
    .validation-summary-errors {
        color: #fff;
        padding: 0.7em 0;
        margin-top: 0em;
        font-size: 1em;
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 10px;
        font-weight: 600;
        background: #d82830;    
        color: #fff;
        border: 1px solid transparent;
        font-family: 'Source Sans Pro', sans-serif;
        transition: 0.5s all ease;
        -webkit-transition: 0.5s all ease;
        -moz-transition: 0.5s all ease;
        -o-transition: 0.5s all ease;
        -ms-transition: 0.5s all ease;
    }
    .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 25px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
    input {
        font-family: monospace;
    }

    label {
        display: block;
    }

    div {
        margin: 0 0 1rem 0;
    }
</style>