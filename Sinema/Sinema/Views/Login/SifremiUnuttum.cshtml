    <style>
        .haluk {
            text-align: center;
            margin: 20px 0 0px 10px;
            text-transform: capitalize;
            letter-spacing: 2px;
        }
        .haluk3 {
            text-align: center;
            margin: 20px 0 0px 10px;
            font-size: 27px;
            color: white;
        }

        .haluk2 {
            text-align: left;
            margin: 20px 0 0px 10px;
            text-transform: capitalize;
            letter-spacing: 2px;
        }

        .alert {
            color: #fff;
            width: 500%;
            margin: auto;
            padding: 0.7em 0;
            margin-top: 0em;
            font-size: 1em;
            letter-spacing: 2px;
            cursor: pointer;
            border: none;
            outline: none;
            border-radius: 30px;
            font-weight: 600;
            background: #fd5c63;
            color: #fff;
            border: 1px solid transparent;
            font-family: 'Source Sans Pro', sans-serif;
            transition: 0.5s all ease;
            -webkit-transition: 0.5s all ease;
            -moz-transition: 0.5s all ease;
            -o-transition: 0.5s all ease;
            -ms-transition: 0.5s all ease;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
